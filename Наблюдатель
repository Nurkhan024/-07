using System;
using System.Collections.Generic;
public interface IObserver
{
    void Update(decimal usdToKztRate, decimal eurToKztRate);
}
public interface ISubject
{
    void Attach(IObserver observer);
    void Detach(IObserver observer);
    void Notify();
}
public class CurrencyExchange : ISubject
{
    private List<IObserver> _observers = new List<IObserver>();
    private decimal _usdToKztRate;
    private decimal _eurToKztRate;
    public decimal UsdToKztRate
    {
        get => _usdToKztRate;
        set
        {
            _usdToKztRate = value;
            Notify(); 
        }
    }
    public decimal EurToKztRate
    {
        get => _eurToKztRate;
        set
        {
            _eurToKztRate = value;
            Notify();
        }
    }
    public void Attach(IObserver observer)
    {
        _observers.Add(observer);
    }

    public void Detach(IObserver observer)
    {
        _observers.Remove(observer);
    }

    public void Notify()
    {
        foreach (var observer in _observers)
        {
            observer.Update(_usdToKztRate, _eurToKztRate);
        }
    }

    public void UpdateRates(decimal usdToKzt, decimal eurToKzt)
    {
        _usdToKztRate = usdToKzt;
        _eurToKztRate = eurToKzt;
        Notify();
    }
}

public class ForexTrading : IObserver
{
    public void Update(decimal usdToKztRate, decimal eurToKztRate)
    {
        Console.WriteLine($"ForexTrading: Новые курсы - USD/KZT: {usdToKztRate}, EUR/KZT: {eurToKztRate}");
    }
}

public class StockMarket : IObserver
{
    public void Update(decimal usdToKztRate, decimal eurToKztRate)
    {
        Console.WriteLine($"StockMarket: Актуализация информации о валютных курсах.");
    }
}

public class NewsAgency : IObserver
{
    public void Update(decimal usdToKztRate, decimal eurToKztRate)
    {
        Console.WriteLine($"NewsAgency: Публикуем новости о валютных курсах.");
    }
}

class Program
{
    static void Main(string[] args)
    {
        CurrencyExchange currencyExchange = new CurrencyExchange();
        ForexTrading forex = new ForexTrading();
        StockMarket stockMarket = new StockMarket();
        NewsAgency newsAgency = new NewsAgency();
        currencyExchange.Attach(forex);
        currencyExchange.Attach(stockMarket);
        currencyExchange.Attach(newsAgency);
        currencyExchange.UpdateRates(470.25m, 495.50m);
        currencyExchange.Detach(stockMarket);
        currencyExchange.UpdateRates(468.00m, 493.75m);
        
        Console.ReadLine();
    }
}
